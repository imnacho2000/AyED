package tests;

import java.util.Scanner;
import tp02.ejercicio1.ListaDeEnterosEnlazada;

public class Ejercicio1_6 { 
	static ListaDeEnterosEnlazada lista = new ListaDeEnterosEnlazada();
	public static void main(String [] args) {
		Ejercicio1_6 f = new Ejercicio1_6();
		Scanner sc = new Scanner(System.in);
		System.out.println("Ingrese un numero para calcular su sucesion: ");
		int l = sc.nextInt();
		ListaDeEnterosEnlazada listaDos = f.calcularSucesion(6);
		System.out.print("La sucesion de {n} es: ");
		for(int n = 0; n < lista.tamanio(); n++) {
			System.out.println(listaDos.elemento(n));
		}
	}
	
	public static ListaDeEnterosEnlazada calcularSucesion (Integer n) {
		if(n != 1) {
			if(n % 2 == 0) {
				n = n /2;
				lista.agregarFinal(n);
				calcularSucesion(n);
			}
			else {
				n = 3 * n + 1;
				lista.agregarFinal(n);
				calcularSucesion(n);
			}
		}
		else if(n == 1) {
			lista.agregarFinal(1);
		}
		return lista;
	}

}
