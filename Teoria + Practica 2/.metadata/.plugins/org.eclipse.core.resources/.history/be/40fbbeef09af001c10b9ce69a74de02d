package tests;


import java.util.Scanner;


import tp02.ejercicio2.ListaEnlazadaGenerica;

public class Ejercicio1_6 {
	static ListaEnlazadaGenerica<Integer> lista = new ListaEnlazadaGenerica ();
	public static void main(String [] args) {
		Ejercicio1_6 f = new Ejercicio1_6();
		Scanner sc = new Scanner(System.in);
		System.out.print("Ingrese un numero para calcular su sucesion: ");
		int l = sc.nextInt();
		ListaEnlazadaGenerica<Integer> listaDos = f.calcularSucesion(l);
		System.out.println("La sucesion de " + l + " es: ");
		for(int n = 1; n <= lista.tamanio(); n++) {
			System.out.println(listaDos.elemento(n));
		}
		sc.close();
	}
	public static ListaEnlazadaGenerica<Integer> calcularSucesion (Integer n) {
		if(n != 1) {
			if(n % 2 == 0) {
				n = n /2;
				lista.agregarFinal(n);
				calcularSucesion(n);
			}
			else {
				n = 3 * n + 1;
				lista.agregarFinal(n);
				calcularSucesion(n);
			}
		}
		else if(n == 1) {
			lista.agregarFinal(1);
		}
		return lista;
	}
}
